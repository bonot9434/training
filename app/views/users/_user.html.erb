<table class="table">
  <thead>
    <tr>
      <th class="col-sm-2">Name</th>
      <th class="col-sm-3">Give</th>
      <th class="col-sm-3">Take</th>
      <th class="col-sm-2"><%= sort_order "industry_id", "業界" %></th>
      <th class="col-sm-2"><%= sort_order "prefecture_id", "勤務地" %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <p><%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "noimage.png", size:'80x80', class: "icon" %></p>
            <p><%= user.name %></p>
          <% end %>
        </td>
        <td>
          <%= user.give %>
        </td>
        <td>
          <%= user.take %>
        </td>
        <td>
          <%= user.industry.name %>
        </td>
        <td>
          <%= user.prefecture.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>