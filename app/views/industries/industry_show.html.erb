<div class="container">
  <h2 class="col-sm-4 mt-3">Users</h2>
  <div class="mt-3">
    <% if @users.exists? %>
      <table class="table">
        <thead>
          <tr>
            <th class="col-sm-2">Name</th>
            <th class="col-sm-3">Give</th>
            <th class="col-sm-3">Take</th>
            <th class="col-sm-2">業界</th>
            <th class="col-sm-2">勤務地</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: '60x60', class: "icon" %></p>
                  <p><%= user.name %></p>
                <% end %>
              </td>
              <td>
                <%= user.give %>
              </td>
              <td>
                <%= user.take %>
              </td>
              <td>
                <%= user.industry.name %>
              </td>
              <td>
                <%= user.prefecture.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div>ユーザーはいません</div>
      <% end %>
  </div>
</div>