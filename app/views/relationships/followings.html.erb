<div class="container">
  <div class="row">
    <h2 class="col-sm-4 mt-3">Follow Users</h2>
    <% if @user == current_user %>
      <div class="col-sm-4 offset-4 mt-3">
        <%= form_with url: user_followings_search_path(@user),method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.select :model,options_for_select({"User"=>"user","Give"=>"give","Take"=>"take"})%>
          <%= f.submit'検索', class: "btn btn-outline-success btn-sm" %>
        <% end %>
      </div>
    <% end %>
  </div>
    <% if @users.exists? %>
      <%= render 'users/user', users: @users %>
    <% else %>
      <div>ユーザーはいません</div>
    <% end %>
</div>