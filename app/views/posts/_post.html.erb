<% posts.each do |post| %>
  <div class="border-top mt-3">
    <div class="offset-1">
      <%= l post.created_at %>
    </div>
    <div class="d-flex">
      <div class="col-2 offset-2">
        <%= link_to user_path(post.user) do %>
          <p><%= attachment_image_tag post.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size:'80x80' %></p>
        <% end %>
      </div>
      <div class="col-7">
        <p><%= post.user.name %></p>
        <%= link_to post_path(post.id) do %>
          <p class="post"><%= post.body %></p>
          <p><%= attachment_image_tag post, :image, :fill, 200, 200 %></p>
        <% end %>
        <div>
          <% post.tags.each do |tag| %>
            <div><i class="fas fa-tag"></i><%= link_to tag.name.truncate(10), search_tag_path(tag_id: tag.id) %></div>
          <% end %>
          <div class="d-flex">
            <div class="like-btn">
              <div class="like_btn_<%= post.id %>">
                <%= render "likes/like", post: post %>
              </div>
            </div>
            <div class="offset-1">
              コメント数:<%= post.post_comments.count %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>